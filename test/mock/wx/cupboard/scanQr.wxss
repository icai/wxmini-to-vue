/* pages/cupboard/save.wxss */

page {
  padding-bottom: 30rpx;
  /* overflow: hidden; */
}

.keykeyboard_box {
  position: fixed;
  z-index: 99;
  bottom: 0;
  width: 100%;
  background-color: #ddd;
  /* padding: 0 8rpx; *//* padding-top: 24rpx; *//* iphone 底部安全距离 */
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.banner {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.banner image {
  width: 100%;
  height: 100%;
}

.keykeyboard {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  padding-bottom: 36rpx;
  box-sizing: border-box;
  position: relative;
  /* padding-top: 20rpx; */
}

.key-item_box {
  width: 32%;
  padding: 16rpx;
  box-sizing: border-box;
}

.key-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 24rpx;
  color: #333;
  height: 46rpx;
}

.key-item-hover {
  background-color: #eee;
}

.key-confim {
  /* flex: 1; */
}

.key-confim .key-item {
  background-color: rgb(10, 137, 255);
  color: #fff;
}

.key-confim .key-item-hover {
  background-color: rgb(91, 176, 255);
}

.key-item.key-icon image {
  height: 38rpx;
  width: 48rpx;
}

.header {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 24rpx;
  margin-top: 24rpx;
}

.header .phone_box {
  height: 100%;
  flex: 1;
  border: 1rpx solid transparent;
  background-color: #fff;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header .phone_box input {
  flex: 1;
}

.header .phone_box .checkbox {
  transform: scale(0.8);
}

.header .number_box {
  height: 100%;
  border: 1rpx solid transparent;
  margin-left: 12rpx;
  background-color: #fff;
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
}

.header_info {
  padding: 12rpx 24rpx;
  height: auto;
  margin-top: 10rpx;
}

.header_info .phone_box, .header_info .number_box {
  background-color: transparent;
  color: #999;
}

.grid-img {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-45%, -60%);
  width: 80rpx;
  height: 80rpx;
}

.van-grid-item {
  position: relative;
  height: 150rpx;
  width: 150rpx;
  background-color: #fff;
  margin-bottom: 24rpx;
}

.van-grid-item_hover {
  opacity: 0.7;
}

.van-grid-item_xx {
  height: 150rpx;
  width: 150rpx;
}

.item-info {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.item-text {
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
}

.tank_list {
  overflow-y: auto;
  /* height: 580rpx; */
  padding: 0 24rpx;
  border-radius: 12rpx 12rpx 0 0;
  padding-bottom: 50rpx;
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.tank_list_title {
  padding: 12px 0;
  padding-left: 10px;
  font-size: 32rpx;
  color: #333;
}

.tabs_box {
  /* padding: 24rpx; */
  margin-top: 24rpx;
}

.key_close {
  height: 50rpx;
  padding-top: 8rpx;
  position: relative;
  z-index: 10;
}

.key_close image {
  height: 60%;
  position: relative;
  top: 0;
  left: 50%;
  transform: translate(-50%, 0);
}

.item_active {
  border: 2rpx solid transparent;
  border-color: #f00;
}

.van-grid-item {
  border: 2px solid transparent;
}

.van-grid-item.active {
  border-color: #f00;
}

.select_box {
  padding: 0 24rpx;
  /* margin-top: 24rpx; */
  display: flex;
  align-items: center;
}

.select_box-item {
  /* width: 120rpx; */
  text-align: center;
  margin-right: 12rpx;
  /* display: flex; *//* align-items: center; */
}

.select_warm {
  position: absolute;
  /* width: 120rpx; */
  right: 280rpx;
}

.showMessageBox {
  padding: 36rpx 36rpx 0;
  width: 500rpx;
  border-radius: 8rpx;
  text-align: center;
  position: relative;
}

.showMessageBox .title {
  font-size: 42rpx;
  margin-bottom: 12rpx;
}

.showMessageBox  .message {
  color: #333;
  margin-bottom: 24rpx;
}

.showMessageBox  .message .number_no {
  color: rgba(4, 0, 255, 0.705);
  font-weight: bold;
  padding: 0 8rpx;
}

.showMessageBox  .action_box {
  margin-bottom: 24rpx;
}

.showMessageBox .footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f0f0f0;
}

.showMessageBox .footer view {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
}

.scan_box {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 100rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 20rpx 0 0 20rpx;
  padding-left: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 0 8px #888;
}

.saveQrMain {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 60rpx 0 40rpx;
}

.saveQrMain view:first-child {
  border-radius: 20rpx 0 0 20rpx;
  background-color: rgb(0, 171, 223);
}

.saveQrMain view:last-child {
  border-radius: 0 20rpx 20rpx 0;
}

.saveQrMain view {
  width: 160rpx;
  height: 80rpx;
  background-color: rgb(255, 0, 0);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.qrclose_box {
  position: absolute;
  right: 24rpx;
  top: 0rpx;
  font-size: 40rpx;
}

.qr_box {
  background-color: #fff;
  text-align: center;
  padding: 12rpx;
  border-top: 24rpx solid #f0f0f0;
  color: rgb(0, 240, 92);
}
.qr_box.no{
  color: #f11;
}