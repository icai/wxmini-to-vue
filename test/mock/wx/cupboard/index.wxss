/* pages/cupboard/index.wxss */

page {
  background-color: #fff;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.index_page {
  width: 100%;
  /* min-height: 800rpx; *//* height: 100vh; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  flex: 1;
  position: relative;
}

.banner {
  width: 100%;
  height: 300rpx;
  position: relative;
  overflow: hidden;
  opacity: 0.9;
}

.banner image {
  width: 100%;
  height: 100%;
}

.index_page view {
  box-sizing: border-box;
}

.sideBoardName_box {
  position: absolute;
  top: 0;
  font-size: 44rpx;
  font-weight: 700;
  color: rgb(74, 82, 88);
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 36rpx;
  width: 100%;
  text-align: center;
}

.index_main {
  /* margin-top: -100rpx; */
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.index_page .btn {
  width: 100%;
  flex: 1;
  /* border-radius: 50%; *//* margin-bottom: 80rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
  position: relative;
  overflow: hidden;
  /* font-weight: bold; */
}

.index_page .btn:not(:last-child) {
  border-bottom: 4rpx solid #fff;
}

