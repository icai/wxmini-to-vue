.action_group {
  margin: 120rpx 0;
  /* display: flex;
  justify-content: space-between; */
  width: 100%;
  position: relative;
}

.scanqr_box {
  position: absolute;
  right: 0;
  /* bottom: 240rpx; *//* background-color: #5b9aff; *//* color: #fff; */
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  transition: opacity 0.2s;
  margin: 0 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: rgb(94, 112, 128);
}

.scanqr_box .icon {
  color: #fdc836;
  background-color: #fffcdd;
  font-weight: bold;
  border-radius: 50%;
  width: 46px;
  height: 46px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-bottom: 18rpx;
}

.scanqr_box_hover {
  opacity: 0.8;
}

.no_board {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scanqr_box_all,.scanqr_box_data {
  /* background-color: rgb(26, 196, 26); *//* border-radius: 6rpx; *//* border-radius: 0 6rpx 6rpx 0; *//* color: #fff; *//* padding: 12rpx 24rpx;
  margin-top: 60rpx; */
  left: 0;
  right: initial;
}

.scanqr_box_all .icon {
  color: #5efd36;
  background-color: #e4ffdd;
}

.open_box {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 36rpx;
  text-align: center;
}

.btn-group {
  border-radius: 50%;
  width: 320rpx;
  height: 320rpx;
  /* overflow: hidden; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgb(82, 192, 255);
  padding: 24rpx;
  position: relative;
  box-sizing: border-box;
  background-image: linear-gradient(120deg, #5b9aff 0%, #36befd 100%);
}

.btn-bg {
  position: absolute;
  opacity: 0.5;
}

.btn-bg.a {
  width: 346rpx;
  height: 346rpx;
  animation: rotating linear 10s infinite;
}

.btn-bg.b {
  width: 380rpx;
  height: 380rpx;
  animation: rotating linear 6s infinite reverse;
}

@keyframes rotating {
  0% {
    transform: rotateZ(0);
  }

  100% {
    transform: rotateZ(360deg);
  }
}

.footer {
  /* justify-self: flex-end; */
  position: absolute;
  bottom: 0;
  font-size: 28rpx;
  padding: 36rpx 0;
}

.footer_box {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.footer text:last-child {
  padding-left: 12rpx;
}

.yp_a {
  color: #5b9aff;
}

.cellSum {
  position: absolute;
  z-index: 6;
  right: 10rpx;
  top: 0;
  background-color: #fff;
  border-radius: 50%;
  width: 54rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  font-size: 24rpx;
  color: #36befd;
  opacity: 0.8;
}

.action_group_a {
  margin-bottom: 120px;
  margin-top: 0;
}

