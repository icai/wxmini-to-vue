.select_box{
  width:45%;
  height:70%;
  border-radius: 14rpx;
  position: relative;
}
.select_box .select{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}
.select_box .select .select_text{
  font-size: 26rpx;
  color: #777777;
  line-height: 28rpx;
  flex: 1;
}
.select_box .select .select_img{
  width: 30rpx;
  height: 30rpx;
  display: block;
  transition:transform 0.3s;
}
.select_box .select .select_img_rotate{
  transform:rotate(180deg); 
}
.select_box .option_box{
  position: absolute;
  top: calc(100% - 1px);
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  border-left:1px solid #efefef;
  border-right:1px solid #efefef;
}
.select_box .option_box .option{
  display: block;
  line-height: 30rpx; 
  font-size: 26rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}


.weui-cell {
  padding: 8px 15px;
}
.weui-label {
  font-size: 14px;
}
.weui-input {
  font-size: 14px;
}
.weui-cell::before {
  border: none;
  margin-top: 2px;
}
.weui-select {
  font-size: 14px;
  padding-left: 0;
}
.food-view-bg {
  background: #fff;
  margin-top: 2px;
}
.food-view {
  background: #fff;
  margin-top: 2px;
  padding-top: 12px;
  padding-bottom: 12px;
}
.food-view::before, .food-view-bg::before{
  border: none;
}
.weui-cells {
  margin-top: 2px;
}
.weui-cells::before {
  border: none;
}
.weui-cells::after {
  border: none;
}
.weui-cells__title {
  font-size: 14px;
  padding-left: 0;
}
.weui-cell::before {
  right: 15px;
}
.food-num {
  width: 60%;
  margin-right: 10%;
  border: 1px solid #999;
  border-radius: 2px;
  height: 1.8em;
  min-height: 1.8em;
  line-height: 1.8em;
  box-shadow: 0 0 2px 0 #999;
}
.food-delete-icon {
  font-weight: bold;
  color: red;
  border: 1px solid #999;
  border-radius: 11px;
  width: 20px;
  height: 20px;
  text-align: center;
  line-height: 18px;
}
.food-text-center {
  text-align: center;
}
.weui-btn-area {
  width: 20%;
  margin: 10px auto;
}

